<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.tau.daemon</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/python3.12</string>
        <string>-m</string>
        <string>tau.main</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/Shared/tau-daemon</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>DATABASE_URL</key>
        <string>postgresql://tau_daemon:tau_password@localhost/tau_lighting</string>
        <key>PYTHONPATH</key>
        <string>/Users/Shared/tau-daemon/src</string>
        <key>LOG_LEVEL</key>
        <string>INFO</string>
        <key>LABJACK_MOCK</key>
        <string>false</string>
        <key>OLA_MOCK</key>
        <string>false</string>
        <key>API_HOST</key>
        <string>0.0.0.0</string>
        <key>API_PORT</key>
        <string>8000</string>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/Shared/tau-daemon/logs/tau-daemon.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/Shared/tau-daemon/logs/tau-daemon-error.log</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>

    <key>ThrottleInterval</key>
    <integer>10</integer>

    <key>ProcessType</key>
    <string>Background</string>

    <key>Nice</key>
    <integer>-5</integer>

    <key>LowPriorityIO</key>
    <false/>
</dict>
</plist>