# Tau Lighting Control System - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_DB=tau_lighting
POSTGRES_USER=tau_daemon
POSTGRES_PASSWORD=tau_dev_password
POSTGRES_PORT=5432

# Daemon Configuration
DAEMON_PORT=8000
DAEMON_HOST=0.0.0.0
LOG_LEVEL=INFO
CONTROL_LOOP_HZ=30
UPDATES_AUTH_TOKEN= # set a shared secret to protect /api/updates/*

# Hardware Configuration
# Raspberry Pi GPIO Configuration (alternative to LabJack)
# Set USE_GPIO=true to use Raspberry Pi GPIO pins instead of LabJack
# Leave as false if using LabJack U3 (even when connected to a Raspberry Pi)
USE_GPIO=false

# GPIO-specific settings (only used when USE_GPIO=true)
GPIO_USE_PIGPIO=true
GPIO_PULL_UP=true
# Custom GPIO pin mappings (format: channel:pin,channel:pin)
# Default input pins: 0:17,1:27,2:22,3:23,4:24,5:25,6:5,7:6
# Default PWM pins: 0:12,1:13 (hardware PWM capable)
# GPIO_INPUT_PINS=0:17,1:27,2:22,3:23
# GPIO_PWM_PINS=0:12,1:13

# Frontend Configuration
NODE_ENV=development
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# CORS Configuration (for network access)
# Add your Pi's IP address to allow access from other devices
# CORS_ORIGINS=["http://localhost:3000","http://192.168.1.100:3000"]
# Or allow access from any origin (useful for Raspberry Pi on local network)
# CORS_ALLOW_ALL=true

# Production Settings
# Uncomment and adjust for production deployments
# NODE_ENV=production
# LOG_LEVEL=WARNING
# CONTROL_LOOP_HZ=30

# Raspberry Pi Production (LabJack via USB)
# If running on Raspberry Pi with LabJack connected via USB:
# USE_GPIO=false  (use LabJack, not GPIO)
# CORS_ALLOW_ALL=true  (allow access from local network)

# Raspberry Pi Production (Native GPIO)
# If running on Raspberry Pi using native GPIO instead of LabJack:
# USE_GPIO=true
# GPIO_USE_PIGPIO=true
# GPIO_PULL_UP=true
