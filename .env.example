# Tau Lighting Control System - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_DB=tau_lighting
POSTGRES_USER=tau_daemon
POSTGRES_PASSWORD=tau_dev_password
POSTGRES_PORT=5432

# Daemon Configuration
DAEMON_PORT=8000
LOG_LEVEL=INFO

# Hardware Mock Mode (set to false when running on actual NUC with hardware)
LABJACK_MOCK=true
OLA_MOCK=true

# Frontend Configuration
NODE_ENV=development
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Production Settings (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=WARNING
# LABJACK_MOCK=false
# OLA_MOCK=false
